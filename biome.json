{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "ignore": ["node_modules", "dist", "downloads", "*.d.ts"]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "all": true,
      "nursery": {
        "noConsole": "off",
        "useImportRestrictions": "off"
      },
      "style": {
        "useNamingConvention": "off",
        "noNamespaceImport": "off"
      },
      "suspicious": {
        "noConsoleLog": "off"
      },
      "correctness": {
        "noNodejsModules": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "ignore": [],
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80
  },
  "javascript": {
    "globals": ["Bun"]
  }
}
